import type { MetadataRoute } from 'next';

export default function sitemap(): MetadataRoute.Sitemap {
  const base = 'https://www.swiftdesigns.studio';
  const paths = ['','/about','/services','/services/web-development','/services/ui-ux-design','/services/maintenance-seo','/portfolio','/testimonials','/contact','/privacy','/terms','/security'];
  const now = new Date().toISOString();
  return paths.map(p => ({ url: `${base}${p}`, lastModified: now, changeFrequency: 'monthly', priority: p === '' ? 1 : 0.7 }));
}
